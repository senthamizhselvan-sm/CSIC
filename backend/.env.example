# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/csic?retryWrites=true&w=majority

# JWT Secret Key (generate a strong random string)
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# Additional Configuration
SESSION_SECRET=your_session_secret_here

# Example MongoDB Atlas URI format:
# MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/csic?retryWrites=true&w=majority

# How to generate JWT_SECRET:
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"